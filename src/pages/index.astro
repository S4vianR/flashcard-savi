---
import Layout from "../layouts/Layout.astro";
import { NavBar } from "../components/NavBar";
import { FlashCards } from "../components/FlashCards";
---

<Layout
  title="Flashcard by Savi | Home"
  description="A simple flashcard app to help you learn new things."
>
  <NavBar client:idle />
  <main class="h-full grid grid-cols-[1fr_9fr] gap-4">
    <aside class="p-4 border-r border-gray-200 text-gray-600">
      Flashcard is a simple app to help you learn new things by creating
      flashcards.
    </aside>
    <section class="p-2 flex flex-col gap-4">
      <h1>
        <span class="text-2xl font-bold">Flashcard</span>
        <span class="text-gray-500 text-sm font-light">v0.1.0</span>
      </h1>
      <FlashCards client:idle />
    </section>
  </main>
</Layout>
